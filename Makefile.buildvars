ACLOCAL_AMFLAGS ?= -I $(top_srcdir)/m4

QT_DEFINES =  -DQT_XML_LIB -DQT_GUI_LIB -DQT_CORE_LIB -DQT_WIDGETS_LIB -DQT_SVG_LIB -DQT_SHARED
QT_CXXFLAGS = -I. -I/usr/include/arm-linux-gnueabihf/qt5 -I/usr/include/arm-linux-gnueabihf/qt5/QtCore -I/usr/include/arm-linux-gnueabihf/qt5/QtGui\
              -I/usr/include/arm-linux-gnueabihf/qt5/QtSvg -I/usr/include/arm-linux-gnueabihf/qt5/QtXml -I/usr/include/arm-linux-gnueabihf/qt5/QtWidgets\
              -I/usr/local/lib/rtxi_includes -I/usr/local/lib/qwt/include -I/usr/X11R6/include\
              -I/usr/include/qwt
QT_LIBS = -lQt5Gui -lQt5Core -lpthread -lQt5Xml -lQt5Svg -lQt5Widgets
MOC = /usr/bin/moc
UIC = /usr/bin/uic

AM_CPPFLAGS = -DEXEC_PREFIX=\"$(exec_prefix)\" -DPREFIX=\"$(prefix)\" $(QT_CXXFLAGS) $(RTOS_CPPFLAGS) 
AM_CXXFLAGS = -pipe -Wall $(QT_CXXFLAGS)
AM_LDFLAGS  = $(QT_LIBS) $(GSL_LIBS) $(RTOS_LDFLAGS) 
AM_CFLAGS = $(AM_CXXFLAGS)

if DEBUG
  AM_CXXFLAGS += -Wall -g -std=c++11 -fPIC
  AM_CPPFLAGS += -DDEBUG
else
  AM_CXXFLAGS += -w -O3 -std=c++11 -fPIC
endif
